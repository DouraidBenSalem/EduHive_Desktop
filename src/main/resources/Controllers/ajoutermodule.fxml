<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.image.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" styleClass="screen" stylesheets="@../style_css/style.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.add_module_controller">
   <children>
      <VBox alignment="CENTER" spacing="20.0" layoutX="50.0" layoutY="30.0" prefWidth="500.0">
         <Label text="Ajouter / Modifier un Module" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
         
         <GridPane hgap="10" vgap="15">
            <Label text="Nom du module:" style="-fx-font-size: 14px;" />
            <TextField fx:id="nom_module" promptText="Entrez le nom du module" GridPane.columnIndex="1" />

            <Label text="Description:" style="-fx-font-size: 14px;" GridPane.rowIndex="1" />
            <TextArea fx:id="description_module" promptText="Entrez la description du module" wrapText="true" prefHeight="100.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />

            <Label text="Image:" style="-fx-font-size: 14px;" GridPane.rowIndex="2" />
            <VBox spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="2">
               <HBox spacing="10">
                  <TextField fx:id="module_img" promptText="Chemin de l'image" HBox.hgrow="ALWAYS" />
                  <Button fx:id="chooseImageBtn" text="Parcourir..." onAction="#chooseImage" />
               </HBox>
               <ImageView fx:id="moduleImageView" fitHeight="150.0" fitWidth="200.0" preserveRatio="true" />
            </VBox>
         </GridPane>

         <HBox spacing="20" alignment="CENTER">
            <Button fx:id="ajouter" text="Ajouter" styleClass="primary-button" onAction="#ajoutermodule" />
            <Button fx:id="effacer" text="Effacer" styleClass="secondary-button" onAction="#effacermodule" />
            <Button fx:id="exit" text="Annuler" styleClass="secondary-button" onAction="#exitForm" />
         </HBox>
      </VBox>
   </children>
</AnchorPane>