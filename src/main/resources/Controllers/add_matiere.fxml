<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<VBox
    maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
    prefHeight="650.0" prefWidth="500.0" spacing="5.0"
    xmlns="http://javafx.com/javafx/8.0.171"
    xmlns:fx="http://javafx.com/fxml/1"
    fx:controller="Controllers.AddMatiereController"
    style="-fx-background-radius: 18; -fx-background-insets: 0; -fx-background-color: linear-gradient(to bottom right, #e3f0ff, #b0d0ff 80%, #f7fbff); -fx-padding: 30; -fx-effect: dropshadow(gaussian, #b0b0b0, 18, 0.2, 0, 4);"
>
   <children>
      <HBox alignment="CENTER" prefHeight="60.0" prefWidth="400.0">
         <children>
            <Label text="Formulaire Matière"
                   style="-fx-font-size: 28px; -fx-font-family: 'Segoe UI Semibold'; -fx-text-fill: #2196f3; -fx-effect: dropshadow(gaussian, #b0d0ff, 6, 0.2, 0, 2);" />
         </children>
      </HBox>
      <HBox alignment="CENTER_LEFT" prefHeight="50.0" prefWidth="400.0" spacing="30.0">
         <children>
            <Label text="Nom:" style="-fx-font-size: 17px; -fx-font-family: 'Segoe UI'; -fx-text-fill: #333;" />
            <TextField fx:id="nomMatiere" prefWidth="240.0" promptText="Entrez le nom de la matière"
                       style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-background-color: #f7fbff; -fx-border-color: #b0d0ff; -fx-border-width: 1.2;" />
         </children>
      </HBox>
      <HBox alignment="CENTER_LEFT" prefHeight="50.0" prefWidth="400.0" spacing="30.0">
         <children>
            <Label text="Description:" style="-fx-font-size: 17px; -fx-font-family: 'Segoe UI'; -fx-text-fill: #333;" />
            <TextField fx:id="descriptionMatiere" prefWidth="240.0" promptText="Entrez une description"
                       style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-background-color: #f7fbff; -fx-border-color: #b0d0ff; -fx-border-width: 1.2;" />
         </children>
      </HBox>
      <HBox alignment="CENTER_LEFT" prefHeight="50.0" prefWidth="400.0" spacing="30.0">
         <children>
            <Label text="Objectif:" style="-fx-font-size: 17px; -fx-font-family: 'Segoe UI'; -fx-text-fill: #333;" />
            <TextField fx:id="objectifMatiere" prefWidth="240.0" promptText="Entrez les objectifs"
                       style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-background-color: #f7fbff; -fx-border-color: #b0d0ff; -fx-border-width: 1.2;" />
         </children>
      </HBox>
      <HBox alignment="CENTER_LEFT" prefHeight="50.0" prefWidth="400.0" spacing="30.0">
         <children>
            <Label text="Module ID:" style="-fx-font-size: 17px; -fx-font-family: 'Segoe UI'; -fx-text-fill: #333;" />
            <TextField fx:id="moduleId" prefWidth="240.0" promptText="Entrez un nombre entier"
                       style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-background-color: #f7fbff; -fx-border-color: #b0d0ff; -fx-border-width: 1.2;" />
         </children>
      </HBox>
      <HBox alignment="CENTER_LEFT" prefHeight="50.0" prefWidth="400.0" spacing="30.0">
         <children>
            <Label text="Enseignant ID:" style="-fx-font-size: 17px; -fx-font-family: 'Segoe UI'; -fx-text-fill: #333;" />
            <TextField fx:id="enseignantId" prefWidth="240.0" promptText="Entrez un nombre entier"
                       style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-background-color: #f7fbff; -fx-border-color: #b0d0ff; -fx-border-width: 1.2;" />
         </children>
      </HBox>
      <HBox alignment="CENTER_LEFT" prefHeight="50.0" prefWidth="400.0" spacing="30.0">
         <children>
            <Label text="Prérequis:" style="-fx-font-size: 17px; -fx-font-family: 'Segoe UI'; -fx-text-fill: #333;" />
            <TextField fx:id="prerequisMatiere" prefWidth="240.0" promptText="Optionnel - Entrez un nombre entier"
                       style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-background-color: #f7fbff; -fx-border-color: #b0d0ff; -fx-border-width: 1.2;" />
         </children>
      </HBox>
      <HBox alignment="CENTER" prefHeight="80.0" prefWidth="400.0" spacing="40.0">
         <children>
            <Button fx:id="btnSave" mnemonicParsing="false" onAction="#saveMatiere"
                    style="-fx-background-color: linear-gradient(to right, #2196f3, #64b5f6); -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8px; -fx-font-size: 16px; -fx-padding: 10 30 10 30; -fx-effect: dropshadow(gaussian, #b0d0ff, 6, 0.2, 0, 2);"
                    text="Enregistrer" />
            <Button fx:id="btnCancel" mnemonicParsing="false" onAction="#cancelMatiere"
                    style="-fx-background-color: linear-gradient(to right, #f44336, #ff7961); -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8px; -fx-font-size: 16px; -fx-padding: 10 30 10 30; -fx-effect: dropshadow(gaussian, #ffbdbd, 6, 0.2, 0, 2);"
                    text="Annuler" />
         </children>
      </HBox>
   </children>
</VBox>