<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.Tooltip?>

<HBox xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.MatiereController">
   <children>
      <fx:include fx:id="navbar" source="navBar.fxml" />
      <VBox prefHeight="600.0" prefWidth="1000.0" style="-fx-background-color: white;">
         <children>
            <AnchorPane prefHeight="600.0" prefWidth="1000.0">
               <children>
                  <Label layoutX="14.0" layoutY="14.0" text="Gestion des Matières" textFill="#58c7fa">
                     <font>
                        <Font name="System Bold" size="24.0" />
                     </font>
                  </Label>
                  <HBox layoutX="14.0" layoutY="60.0" spacing="10">
                     <children>
                        <Button fx:id="btnAjouter" mnemonicParsing="false" onAction="#ajouterMatiere" prefHeight="25.0" prefWidth="143.0" style="-fx-background-color: #58c7fa; -fx-text-fill: white;" text="Ajouter une matière" />
                        <Button fx:id="btnStats" mnemonicParsing="false" onAction="#navigateToStatistiques" prefHeight="25.0" prefWidth="143.0" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" text="Statistiques" />
                     </children>
                  </HBox>
                  <ListView fx:id="listMatiere" layoutX="14.0" layoutY="100.0" prefHeight="400.0" prefWidth="900.0" style="-fx-background-radius: 5; -fx-border-radius: 5; -fx-border-color: #e0e0e0;" />
                  <HBox alignment="CENTER_LEFT" layoutX="14.0" layoutY="510.0" spacing="10">
                     <children>
                        <Label text="🔍" style="-fx-font-size: 20px; -fx-text-fill: #58c7fa;"/>
                        <TextField fx:id="searchField" prefHeight="25.0" prefWidth="300.0" promptText="Rechercher une matière, un module, un enseignant..." />
                        <Button fx:id="btnClearSearch" mnemonicParsing="false" text="✕" />
                        <Button fx:id="btnExportMenu" mnemonicParsing="false" text="⭳" />
                     </children>
                  </HBox>
               </children>
            </AnchorPane>
         </children>
      </VBox>
   </children>
</HBox>